h1
  font-size 65px
  line-height 1.2em
  border-bottom #CCC solid 1px
  padding 20px 0
h3
  font-weight 300
header
  position fixed
  top 0
  margin-left -0.8em
  background-color black
  width 100%
  color white
  padding-left 1em
a
  color #FFFF00
  text-decoration none
header ul
  margin 0
  padding 0
  list-style-type none
  text-align center
header ul li
    display inline
header h3 a
  float left
header ul li a
  float right
  margin-right 1.5em
  padding-bottom 1em